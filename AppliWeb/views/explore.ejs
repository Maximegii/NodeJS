<!DOCTYPE html>
<html lang="en">

<%- include('include/head.ejs') %>

<body>

  <!-- ***** Preloader Stshop ***** -->
  <div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
      <span class="dot"></span>
      <div class="dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
  <!-- ***** Preloader End ***** -->

  <!-- ***** Header Area Stshop ***** -->
  <%- include('include/header.ejs') %>
  <!-- ***** Header Area End ***** -->

  <div class="page-heading">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h2>Découvrez nos ventes incontournables</h2>
        </div>
      </div>
    </div>
    <div class="featured-explore">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div class="owl-features owl-carousel">
              <div class="item">
                <div class="thumb">
                  <img src="http://localhost:3000/images/console-01.webp" alt="" style="border-radius: 20px;">
                  <div class="hover-effect">
                    <div class="content">
                      <h4>Nitendo Switch</h4>
                      <span class="author">
                        <img src="http://localhost:3000/images/logo-2.png" alt="" style="max-width: 50px; max-height: 50px; border-radius: 50%;">
                        <h6>Tech-Store<br><a href="#">@tech-store-shop</a></h6>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="item">
                <div class="thumb">
                  <img src="http://localhost:3000/images/console-02.jpeg" alt="" style="border-radius: 20px;">
                  <div class="hover-effect">
                    <div class="content">
                      <h4>MSI Titan G177 </h4>
                      <span class="author">
                        <img src="http://localhost:3000/images/logo-2.png" alt="" style="max-width: 50px; max-height: 50px; border-radius: 50%;">
                        <h6>Tech-Store<br><a href="#">@tech-store-shop</a></h6>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="item">
                <div class="thumb">
                  <img src="http://localhost:3000/images/console-03.jpg" alt="" style="border-radius: 20px;">
                  <div class="hover-effect">
                    <div class="content">
                      <h4>Xbox Series X</h4>
                      <span class="author">
                        <img src="http://localhost:3000/images/logo-2.png" alt="" style="max-width: 50px; max-height: 50px; border-radius: 50%;">
                        <h6>Tech-Store<br><a href="#">@tech-store-shop</a></h6>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="item">
                <div class="thumb">
                  <img src="http://localhost:3000/images/console-04.webp" alt="" style="border-radius: 20px;">
                  <div class="hover-effect">
                    <div class="content">
                      <h4>Sonny PlayStation PS5</h4>
                      <span class="author">
                        <img src="http://localhost:3000/images/logo-2.png" alt="" style="max-width: 50px; max-height: 50px; border-radius: 50%;">
                        <h6>Tech-Store<br><a href="#">@tech-store-shop</a></h6>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="discover-items">
    <div class="container">
      <div class="col-lg-5">
        <div class="section-heading">
          <div class="line-dec"></div>
          <h2>Découvrez notre boutique en <em>ligne</em>!</h2>
        </div>
      </div>
      
      <div class="row">
        <% for(let product of products) { %>
        <div class="col-lg-3">
          <div class="item">
            <div class="row">
              <div class="col-lg-12">
                <span class="author">
                  <img src="http://localhost:3000/images/logo-2.png" alt="" style="max-width: 50px; max-height: 50px; border-radius: 50%;">
                </span>
                <img src="<%= product.img %>" alt="" style="border-radius: 20px;">
                <h4><%= product.name %></h4>
              </div>
              <div class="col-lg-12">
                <div class="line-dec"></div>
                <div class="row">
                  <div class="col-6">
                    <span>Prix: <br> <strong>$<%= product.price %></strong></span>
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="main-button">
                  <a href="login.html">View Details</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('include/footer.ejs') %>

  <!-- Scripts -->
  <!-- Bootstrap core JavaScript -->
  <%- include('include/script.ejs') %>

  </body>
</html>