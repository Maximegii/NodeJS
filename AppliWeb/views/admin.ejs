              <div class="col-lg-4">
                <fieldset>
                  <label for="price">prix</label>
                  <input type="int" name="price" id="price" placeholder="Prix en â‚¬" autocomplete="on" required>
                </fieldset>
              </div>

              <div class="col-lg-6">
                <fieldset>
                  <label for="img">Liens de l'image</label>
                  <input type="text" name="img" id="img" placeholder="Ex. http://localhost:3000/images/tonimage.png" autocomplete="on" required>
                </fieldset>
              </div>

      

              <div class="col-lg-8">
                <fieldset>
                  <button type="submit" id="form-submit" class="orange-button">Ajouter ce produit</button>
                </fieldset>
              </div>
            </div>
          </form>
        </div>
      </div>
